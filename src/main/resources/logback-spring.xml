<configuration scan="true" scanPeriod="60 seconds">

    <property name="APP" value="${spring.application.name:-its-web}"/>
    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>

    <property name="LOGLINE"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5level %logger{0} - [%X{requestId:-boot}] [%X{userId:-system}] %msg %ex{3}%n"/>

    <!-- 콘솔 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOGLINE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ========================= 운영(prod) ========================= -->
    <springProfile name="prod">

        <!-- 파일(롤링) -->
        <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${APP}.log</file>
            <encoder>
                <pattern>${LOGLINE}</pattern>
                <charset>UTF-8</charset>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/archive/${APP}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxHistory>14</maxHistory>
                <totalSizeCap>2GB</totalSizeCap>
                <maxFileSize>50MB</maxFileSize>
            </rollingPolicy>
        </appender>

        <!-- 비동기 -->
        <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="APP_FILE"/>
            <queueSize>2048</queueSize>
            <discardingThreshold>0</discardingThreshold>
            <neverBlock>true</neverBlock>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
        </root>
    </springProfile>
    <!-- ================================================================ -->

    <!-- 공통 로그 레벨 -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.boot" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework.transaction" level="ERROR"/>
    <logger name="com.ulisesbocchio.jasypt" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>

    <logger name="com.itsconv" level="INFO"/>

    <!-- ========================= 개발(dev, local) ========================= -->
    <springProfile name="dev,local">
    <!-- SQL 출력 -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>

    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework.transaction" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>